<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ResultScreen">

    <TextView
        android:id="@+id/totalWins"
        android:layout_width="244dp"
        android:layout_height="61dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:fontFamily="@font/bubblegum_sans_regular"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/win_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/displayResult"
        android:layout_width="354dp"
        android:layout_height="145dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:fontFamily="@font/bubblegum_sans_regular"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="171dp"
        android:layout_height="106dp"
        android:backgroundTint="@color/cherry_red"
        android:fontFamily="@font/bubblegum_sans_regular"
        android:gravity="center"
        android:text="EXIT"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

</androidx.constraintlayout.widget.ConstraintLayout>